swiper {
	width: 100%;
	height: 380rpx;
}

swiper-item {
	width: 100%;
	height: 380rpx;
}

swiper-item image {
	width: 100%;
	height: 380rpx;
}

.case {
	width: 100%;
	overflow: hidden;
	border-bottom: 22rpx solid #f8f8f8;
}

.case-all {
	width: 100%;
	background: #fff;
	box-sizing: border-box;
	overflow: hidden;
	margin: 30rpx 20rpx;
}

.case-all .case-ul {
	width: 100%;
	display: inline;
	white-space: nowrap;
	float: left;
	overflow-y: hidden;
}

.case-all .case-ul li {
	display: inline-block;
	overflow: hidden;
	padding: 0 10rpx;
}

.case-all .case-ul li image {
	height: 300rpx;
	width: 240rpx;
	border-radius: 20rpx;
}

.case-all .case-ul li .caseName {
	font-size: 30rpx;
	height: 40rpx;
	line-height: 40rpx;
}

.case-all .case-ul li .caseInfo {
	font-size: 28rpx;
}

.case-all .case-ul .default {
	background: #8720f0;
	border-radius: 8rpx;
	color: #fff;
}

.top {
	height: 38rpx;
	line-height: 38rpx;
	margin: 26rpx 0;
	font-size: 30rpx;
	color: #333;
	border-left: 12rpx solid #8720f0;
	text-indent: 10rpx;
	font-weight: 600;
}

.seeMore {
	float: right;
	color: #999999;
	font-size: 24rpx;
	margin-right: 28rpx;
}

.total {
	width: 100%;
	overflow: hidden;
	border-bottom: 22rpx solid #f8f8f8;
}

.total .total-ul .logo {
	height: 362rpx;
	width: 100%;
	overflow: hidden;
}

.total .total-ul image {
	height: 100%;
	width: 100%;
  border-radius: 10rpx;
}

.total .total-ul .name {
	font-size: 30rpx;
	height: 40rpx;
	line-height: 40rpx;
	text-indent: 20rpx;
}

.total .total-ul .info {
	font-size: 28rpx;
	text-indent: 20rpx;
}

.total .total-li {
	width: 90%;
	margin: 0rpx auto 20rpx auto;
	overflow: hidden;
}

.total .total-li .total-infor
.total .total-li .go {
	display: block;
