.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  overflow: hidden;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 200px;
}

.forum{margin-top: 100rpx;}
.forum .page{background: #FFF;}
.forum #header{}
.forum #header .header{}
.forum #header .header .type{width: 33.33%;}
.forum #header .header .type:first-child{border: none;}
.forum .list{margin:0 auto;overflow: hidden;display: flex;justify-content: space-between;width: 100%;flex-wrap: wrap;}
.forum .list .li{width: 100%;margin-bottom: 20px;background: #fff;box-sizing: border-box;border:2px solid #eee;float: left;}
.forum .list  a{display: block;overflow: hidden;position: relative;}
.forum .list .li .img{width: 100%; height: 377rpx;}
.forum .list .li .name{width: 100%;
 height:45rpx;
line-height:45rpx;
font-size:30rpx;
 color: #333; overflow: hidden;text-indent: 10rpx;}
.forum .list .li .style{width: 100%; height:45rpx;
line-height:45rpx; font-size: 30rpx; overflow: hidden;color: #c4c4c4;text-indent: 10rpx;}
.forum .list .li .vr {position: absolute;right: 0px;top: 0;height: 70px;  }
.forum .list .li .watch{width: 38%; position: absolute; height: 45rpx; right: 0; bottom: 0px;}
.forum .list .li .watch div{ height:45rpx;
line-height:45rpx;font-size: 35rpx; float: right; margin-left: 10px; color: #ff3d00; margin-right: 18rpx;}
.forum .list .li .watch image{height:30rpx;
width:30rpx;
float:right;
margin:7.5rpx 0;
}
.forum div{display: block;}

.top{
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: fixed;
  top:0;
  z-index: 10;
  background: #fff;
  border:  2rpx solid #eee;
  border-left: none;
  border-right: none;
}

.top>view{
  width: 50%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  position: relative;
}

.div{
  position: fixed;
  width: 100%;
  top:100rpx;
  display: flex;
  justify-content: space-around;
  z-index: 10;
}

.div .style{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #fff;
  display: flex;
  justify-content:  flex-start;
  flex-wrap: wrap;
}
.div .style view{
  display: inline-block;
  padding: 20rpx;
  border: 2rpx solid #eee;
  box-sizing: border-box;
  margin: 10rpx;
  font-size: 24rpx;
  border-radius: 50%;
}

.active{
  color: #fff;
  background: #8720F0;
}

.top .active{
  color: #8720F0;
  background: #fff;
}