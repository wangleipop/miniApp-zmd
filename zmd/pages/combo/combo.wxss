/* pages/combo/combo.wxss */
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  overflow: hidden;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 200px;
}
.sift-combo{}
.sift-combo .page{background: #fff;}
.sift-combo .li{overflow: hidden;width: 96%;margin: 0 auto;}
.sift-combo .li .logo{display: block; overflow: hidden;}
.sift-combo .li .logo image{height: 400rpx; width: 100%;}
.sift-combo .li div{overflow: hidden;display: block;}
.sift-combo .li .combo{float: left; color: #525252; font-size: 30rpx; margin: 10rpx 0;}
.sift-combo .li .overview{float: left;width: 60%;font-size: 28rpx; color: #a8a8a8; overflow: hidden;height: 60rpx;line-height: 60rpx;}
.sift-combo .watch {overflow: hidden;float: right;margin-right: 8rpx;height: 60rpx;line-height: 60rpx;}
.sift-combo .watch image{height: 40rpx; width: 40rpx; float: left; margin: 10rpx 0;}
.sift-combo .foot{border-bottom: 2px solid #eee;overflow: hidden;height: 60rpx;line-height: 60rpx;}
.sift-combo .watch div{height: 60rpx; line-height: 60rpx; font-size: 22rpx; float: left; margin-left: 10px; color: #ff3d00;}
.sift-combo .li div{overflow: hidden;}
.sift-combo .li .price{float: left; height: 60rpx; line-height: 60rpx; color: #ff3d00; font-size: 28rpx; margin-right: 20px; width: 50%;}
.sift-combo .li .consult{float: right; margin: 10rpx 0; margin-right: 5rpx; color: #ff3d00; font-size: 24rpx; border: 2rpx solid #ff3d00; height: 40rpx;line-height: 40rpx;
padding: 0 10rpx;
}
