.two {
	background: #eee;
	width: 100%
}

.two>view {
	width: 50%;
	float: left;
	overflow: hidden;
}

.two .tow-left image {
	display: block;
	width: 100%;
	height: 400rpx;
}

.two .two-right image {
	width: 100%;
	height: 200rpx;
}

.active>div {
	float: left;
